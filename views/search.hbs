<div class="block">
  <form action="/search" method="POST">
  <div class="field has-addons">
    <div class="control">
      <input type="text" name="alias" placeholder="Search for user..." class="input">
    </div>
    <div class="control">
      <input type="submit" value="Search" class="button is-primary">
    </div>
    <div class="control">
      <input type="reset" value="Reset" class="button is-primary">
    </div>
  </div>
  </form>
  <hr>
  <form action="/search" method="POST">
      <div class="notification is-5">
        <div class="field is-horizontal">
          <div class="field-label">
              <label class="label">Filter profiles by</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                  <label class="radio">
                      <input type="radio" name="searchType" value="and" checked>
                      All of these selections
                  </label>
              </div>
              <div class="control">
                  <label class="radio">
                      <input type="radio" name="searchType" value="or">
                      Any of these selections
                  </label>
              </div>
            </div>
          </div>
        </div>
    </div>
    <div class="field">
      <div class="columns">
          <div class="column">

            <div class="field is-horizontal">
              <div class="field-label">
                  <label class="label">Tabs or Spaces?</label>
              </div>
              <div class="field-body">
                  <div class="field">
                      {{#each tabsPrefs}}
                          <div class="control" data-display>
                              <label class="checkbox">
                                  <input type="checkbox" name="tabs_preference" value="{{preference_id}}">
                                  {{description}}
                              </label>
                          </div>
                      {{/each}}
                  </div>
              </div>
            </div>

            <div class="field is-horizontal">
              <div class="field-label">
                  <label class="label">Brackets: same line or next?</label>
              </div>
              <div class="field-body">
                  <div class="field">
                      {{#each curlyPrefs}}
                          <div class="control" data-display>
                              <label class="checkbox">
                                  <input type="checkbox" name="same_line_curlies_preference" value="{{preference_id}}">
                                  {{description}}
                              </label>
                          </div>
                      {{/each}}
                  </div>
              </div>
            </div>
          
            <div class="field is-horizontal">
              <div class="field-label">
                  <label class="label">Quotes: single or double?</label>
              </div>
              <div class="field-body">
                  <div class="field">
                      {{#each quotesPrefs}}
                          <div class="control" data-display>
                              <label class="checkbox">
                                  <input type="checkbox" name="single_quotes_preference" value="{{preference_id}}">
                                  {{description}}
                              </label>
                          </div>
                      {{/each}}
                  </div>
              </div>
          </div>

          </div>
          <div class="column">
            <div class="block">
              <label class="label">Preferred languages</label>
              {{#each languages}}
                    <div class="control">
                        <label class="checkbox">
                            <input type="checkbox" name="{{name}}">
                            {{name}}
                        </label>
                    </div>
                {{/each}}
            </div>
            <div class="block">
              <label class="label">Preferred text editor</label>
              {{#each editors}}
                    <div class="control">
                        <label class="checkbox">
                            <input type="checkbox" name="editor_{{editor_id}}">
                            {{name}}
                        </label>
                    </div>
                {{/each}}
            </div>
            <div class="block">
              {{!-- <label class="label">City</label> --}}
              <input type="text" class="input" name="city" placeholder="City...">
            </div>
            <div class="block">
              {{!-- <label class="label">State</label> --}}
              <div class="select">
                <select name="state">
                  <option>State</option>
                  {{#each state}}
                  <option value="{{name}}">
                      {{name}}
                  </option>
                  {{/each}}
                </select>
              </div>
            </div>
            <div class="block">
              {{!-- <label class="label">Zip</label> --}}
              <input type="text" class="input" name="zip" placeholder="Zip...">
            </div>
            <div class="block">
              {{!-- <label class="label">Employer</label> --}}
              <input type="search" class="input" name="employer" placeholder="Employer...">
            </div>
          </div>
        </div>
      <div class="block">
        <input type="submit" value="Search" class="button is-primary">
        <input type="reset" value="Reset" class="button is-primary">
      </div>
    </div>
  </form>
</div>